# ========================================
# LARAVEL .ENV OPTIMIZATION SETTINGS
# ========================================
# Add these settings to your .env file for optimal performance on VPS (2GB RAM, 2 Core)

# Cache Configuration (Choose ONE)
# Option 1: Use file cache (no additional setup needed)
CACHE_DRIVER=file

# Option 2: Use Redis cache (recommended if Redis is installed)
# CACHE_DRIVER=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Session Configuration (Optimized for VPS)
# Use cookie-based sessions (stateless, no server storage needed)
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Queue Configuration (Use sync for small operations)
QUEUE_CONNECTION=sync
# Or use database queue for background jobs
# QUEUE_CONNECTION=database

# Database Connection Pooling
DB_CONNECTION=mysql
DB_CONNECTIONS_POOL_SIZE=5
DB_CONNECTIONS_POOL_TIMEOUT=30

# Logging (Use stack for both file and daily)
LOG_CHANNEL=stack
LOG_STACK=single,daily
LOG_LEVEL=warning
LOG_MAX_FILES=14

# Asset Compilation
VITE_ASSET_URL=/build

# Performance Flags
APP_DEBUG=false  # MUST be false in production
APP_ENV=production

# Debugbar (MUST be disabled in production)
DEBUGBAR_ENABLED=false

# Query Cache (if using MySQL query cache)
DB_QUERY_CACHE=true

# Optimization Settings
APP_CACHE_ROUTES=true
APP_CACHE_CONFIG=true
OPTIMIZE_AUTOLOADER=true

# File Upload Settings
UPLOAD_MAX_FILESIZE=2M
POST_MAX_SIZE=10M

# Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Trusted Proxies (if using reverse proxy)
TRUSTED_PROXIES=*

# Security Settings
SECURE_COOKIES=true
SANCTUM_STATEFUL_DOMAINS=yourdomain.com
